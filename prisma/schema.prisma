generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("POSTGRES_URL")
  directUrl = env("POSTGRES_URL_NON_POOLING")
}

model Assignment {
  id            Int            @id @default(autoincrement())
  date          DateTime       @default(now())
  classroomId   Int
  questionSetId Int
  closesAt      DateTime
  kind          AssignmentKind @default(FRIDAY_TEST)

  opensAt       DateTime
  windowMinutes Int            @default(4)
  Classroom     Classroom      @relation(fields: [classroomId], references: [id], onDelete: Cascade)
  QuestionSet   QuestionSet    @relation(fields: [questionSetId], references: [id])
  Attempt       Attempt[]

  @@unique([classroomId, kind, opensAt])
  @@index([classroomId])
  @@index([questionSetId])
}

model AssignmentSchedule {
  id            Int      @id @default(autoincrement())
  classroomId   Int
  questionSetId Int

  /// Local time-of-day string like "08:00" in PT
  opensAtLocalTime String

  /// Window length in minutes (e.g. 4)
  windowMinutes Int     @default(4)

  /// Whether this schedule is currently active
  isActive      Boolean @default(true)

  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  Classroom     Classroom   @relation(fields: [classroomId], references: [id], onDelete: Cascade)
  QuestionSet   QuestionSet @relation(fields: [questionSetId], references: [id], onDelete: Restrict)

  @@index([classroomId])
  @@index([questionSetId])
}

model Attempt {
  id           Int           @id @default(autoincrement())
  studentId    Int
  assignmentId Int
  score        Int
  total        Int
  completedAt  DateTime      @default(now())
  Assignment   Assignment    @relation(fields: [assignmentId], references: [id], onDelete: Cascade)
  Student      Student       @relation(fields: [studentId], references: [id], onDelete: Cascade)
  AttemptItem  AttemptItem[]

  @@unique([studentId, assignmentId])
  @@index([assignmentId])
}

model AttemptItem {
  id          Int      @id @default(autoincrement())
  attemptId   Int
  questionId  Int
  givenAnswer Int
  isCorrect   Boolean
  Attempt     Attempt  @relation(fields: [attemptId], references: [id], onDelete: Cascade)
  Question    Question @relation(fields: [questionId], references: [id])

  @@unique([attemptId, questionId])
  @@index([questionId])
}

model Classroom {
  id         Int                  @id @default(autoincrement())
  name       String
  teacherId  Int
  Assignment Assignment[]
  // ðŸ‘‡ NEW: back-reference to schedules
  AssignmentSchedule AssignmentSchedule[]

  Teacher    Teacher              @relation(fields: [teacherId], references: [id], onDelete: Cascade)
  Student    Student[]

  @@index([teacherId])
}

model Question {
  id          Int           @id @default(autoincrement())
  setId       Int
  factorA     Int
  factorB     Int
  answer      Int
  AttemptItem AttemptItem[]
  QuestionSet QuestionSet   @relation(fields: [setId], references: [id], onDelete: Cascade)

  @@unique([setId, factorA, factorB])
  @@index([setId])
}

model QuestionSet {
  id         Int                  @id @default(autoincrement())
  level      Int                  @unique
  Assignment Assignment[]
  // ðŸ‘‡ NEW: back-reference to schedules
  AssignmentSchedule AssignmentSchedule[]
  Question   Question[]
}

model Student {
  id          Int       @id @default(autoincrement())
  name        String
  username    String    @unique
  password    String
  level       Int       @default(1)
  classroomId Int
  createdAt   DateTime  @default(now())
  updatedAt   DateTime
  Attempt     Attempt[]
  Classroom   Classroom @relation(fields: [classroomId], references: [id], onDelete: Cascade)

  @@index([classroomId])
}

model Teacher {
  id        Int         @id @default(autoincrement())
  name      String
  email     String      @unique
  password  String
  createdAt DateTime    @default(now())
  updatedAt DateTime
  Classroom Classroom[]
}

enum AssignmentKind {
  FRIDAY_TEST
}
